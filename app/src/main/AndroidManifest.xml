<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wtl.mynotes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_round2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.EditNoteActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity android:name=".Activity.SmuggleActivity" />
        <activity android:name=".Activity.HandleActivity" />
        <activity android:name=".Activity.AbandonActivity" />
        <activity android:name=".Activity.SettingActivity" />
        <activity android:name=".Activity.FirstStartActivity"></activity>
    </application>

</manifest>