<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#f4f4f4">

        <TextView
            android:id="@+id/dia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此项操作执行后"
            android:textColor="#ce0101"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/dia2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的数据将彻底销毁"
            android:textColor="#b70000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/dia3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are You Ready？"
            android:textColor="#960202"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b4b4b4"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_delete_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:textColor="#414141"
                android:textSize="17sp"
                android:padding="15dp"
                android:background="@drawable/touch"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#b4b4b4"/>

            <TextView
                android:id="@+id/dialog_delete_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确定"
                android:gravity="center"
                android:textColor="#414141"
                android:textSize="17sp"
                android:padding="15dp"
                android:background="@drawable/touch"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>